<sectoin class="content">
<div class="card">
	<div class="card-header">
	  <h3 class="card-title">Sales Details</h3>

	  <div class="card-tools">
		<button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
		  <i class="fas fa-minus"></i></button>
		<button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
		  <i class="fas fa-times"></i></button>
	  </div>
	</div>
</div>
<div class="card-body table-responsive p-0" style="height: 400px;">
	<table class="table table-striped table-head-fixed text-nowrap">
	<thead>
		<tr>
			<th style="width: 10%" >modelno</th>
			<th style="width: 10%" >ptype</th>
			<th style="width: 10%" >pcompany</th>
			<th style="width: 10%" >generation</th>
			<th style="width: 10%" >ram</th>
			<th style="width: 10%" >storage</th>
			<th style="width: 10%" >price</th>
			<th style="width: 15%" >Quantity</th>
			<!-- <th style="width: 10%" >Cost Price</th>
			<th style="width:<th style="width: 20%" > </th> 10%" >Selling Price</th> -->
			
		</tr>
	</thead>
	<tbody>
		<% for(var i=0;i<data.length;i++)  {%>
			<tr>
			<td><%= data[i].modelno%></td>
			<td><%= data[i].ptype%></td>
			<td><%= data[i].pcompany%></td>
			<td><%= data[i].generation%></td>
			<td><%= data[i].ram%></td>
			<td><%= data[i].storage%></td>
			<td><%= data[i].price%></td>
			
			
			<td><div class="progress progress-xs">
				<div class="progress-bar bg-success" style="width:60%"></div>
			  </div>
			  <%= data[i].quantity%></td>
				
					
			</tr>
			<% } %>
	</tbody>
	</table>
	</div>

</sectoin>


		
